                         <script>
                          function getData{{$Pranch2->PranchID}}(eval)
                          {
                            $.ajax({
                              type: "GET",
                              url: "areas/"+eval,
                              dataType: "json",
                              success: function (response) {
                                $("#exampleFormControlSelect2{{$Pranch2->PranchID}}").find("option").remove();
                                      if(response.length>0)
                                      {
                                        for (let index = 0; index < response.length; index++) {
                                          $("#exampleFormControlSelect2{{$Pranch2->PranchID}}").append("<option value='"+response[index].AreaID+"'>"+response[index].AreaArName+"</option>");
                                        }
                                      }
                              },error:function(response){
                                console.log(response);
                              }
                            }
                            );
                          }
                          </script>
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">إلغاء</button>
                      <input type="submit" value="تعديل" class="btn btn-danger" />
                   
